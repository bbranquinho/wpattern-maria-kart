<Window x:Class="WColorSensor.MLPInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Input to MLP Network" Height="178" Width="185" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Label Name="LabelR" Content="R:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="TextBoxR"  HorizontalAlignment="Left" Height="23" Margin="35,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Name="LabelG"  Content="G:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxG"  HorizontalAlignment="Left" Height="23" Margin="36,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Name="LabelB"  Content="B:" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TextBoxB"  HorizontalAlignment="Left" Height="23" Margin="36,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button Name="ButtonOk"  Content="Ok" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="70" Click="ButtonOk_Click"/>
        <Button Name="ButtonCancel"  Content="Cancel" HorizontalAlignment="Left" Margin="86,103,0,0" VerticalAlignment="Top" Width="70" Click="ButtonCancel_Click"/>
    </Grid>
</Window>
